@model CO567WBL_Ticket_App.Models.ViewModels.EventDetailViewModel

@{
    ViewData["Title"] = "Create an Event";
}

<h1>Create a new Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Date of Movie:</label>
                <input asp-for="DateOfMovie" class="form-control" />
                <span asp-validation-for="DateOfMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Poster:</label>
                <br />
                <input type="file" name="files" multiple asp-for="EventPicture" />
                <span asp-validation-for="EventPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @TempData["Success"]
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
